<script>
  function proceedToFertilization() {
    // Hide the Sperm or Egg page and show the Fertilization page
    document.getElementById('page19').style.display = 'none';
    document.getElementById('page20').style.display = 'none';
    document.getElementById('page21').style.display = 'block';


  }

  function gameOver() {
    alert("Game Over! The fertilization process is complete.");
    // Optionally, add a reset function or redirect here
  }
  

  function gotopage(pageId) {
    // Hide all pages first
    const allPages = document.querySelectorAll('.page');
    allPages.forEach(page => page.style.display = 'none');

    // Show the selected page
    const targetPage = document.getElementById(pageId);
    if (targetPage) {
      targetPage.style.display = 'block';
    }
    currentPage=17;
  }
</script>

