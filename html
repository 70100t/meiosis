<script>
  function chooseGamete(gamete) {
    // Hide the Results page
    document.getElementById('page17').style.display = 'none';

    // Show the Sperm page if sperm is chosen
    if (gamete === 'sperm') {
      document.getElementById('page19').style.display = 'block';
      showPage(19);
    }

    // Show the Egg page if egg is chosen
    else if(gamete === 'egg') {
      document.getElementById('page20').style.display = 'block';
      showPage(20);
    }
  }
</script>

