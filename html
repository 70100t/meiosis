        <img src="c:/tala/pic4.png" alt="." width="160">
      </div>
      <div class="drag-item" id="drag2" draggable="true">
        <img src="c:/tala/pic5.png" alt="Four chromatids forming" width="100">
      </div>
    </div>


    <div class="drop-zone" id="drop-zone2">
      Drop events here!
    </div>

